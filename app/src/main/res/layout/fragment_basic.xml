<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmnts.BasicFragment">

    <com.ahmedsallam.pager.PagerIndicatorView
        android:id="@+id/pagerIndicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:indicatorColorSelected="#FF0000"
        app:indicatorColorUnselected="#0000FF"
        app:indicatorItemHeight="16dp"
        app:indicatorItemMargin="8dp"
        app:indicatorItemWidth="16dp"
        app:indicatorMarginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pagerHeight="200dp" />
</androidx.constraintlayout.widget.ConstraintLayout>